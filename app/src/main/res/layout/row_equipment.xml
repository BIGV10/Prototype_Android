<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_equipment_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Equipment_Barcode"
        app:layout_constraintStart_toEndOf="@+id/text_static_equipment_barcode"
        app:layout_constraintTop_toTopOf="@+id/text_static_equipment_barcode" />

    <TextView
        android:id="@+id/text_static_equipment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Название:"
        app:layout_constraintStart_toStartOf="@+id/text_static_equipment_barcode"
        app:layout_constraintTop_toBottomOf="@+id/text_static_equipment_barcode" />

    <TextView
        android:id="@+id/text_equipment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Equipment_Name"
        app:layout_constraintStart_toEndOf="@+id/text_static_equipment_name"
        app:layout_constraintTop_toTopOf="@+id/text_static_equipment_name" />

    <TextView
        android:id="@+id/text_static_equipment_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Комментарий:"
        app:layout_constraintStart_toStartOf="@+id/text_static_equipment_name"
        app:layout_constraintTop_toBottomOf="@+id/text_static_equipment_name" />

    <TextView
        android:id="@+id/text_equipment_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Equipment_Comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_static_equipment_comment"
        app:layout_constraintTop_toBottomOf="@+id/text_static_equipment_comment" />

    <TextView
        android:id="@+id/text_static_equipment_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Штрихкод:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_equipment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Equipment_ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="5px"
        android:background="@color/colorAccent"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
